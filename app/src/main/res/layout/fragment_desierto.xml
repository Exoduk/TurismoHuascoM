<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <!-- 1. Carrusel de Imágenes -->
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="16dp" />

                <!-- 2. Título -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desierto Florido"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- 3. Descripción -->
                <TextView
                    android:id="@+id/tvDescripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <!-- 4. Link a PDF -->
                <TextView
                    android:id="@+id/tvPdfLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver Afiche de Expresiones del Desierto Florido"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:layout_marginBottom="16dp"/>

                <!-- Título de Láminas de Información -->
                <TextView
                    android:id="@+id/tvLaminasTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Láminas de Información"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>


                <TextView
                    android:id="@+id/tvVerLaminasCompletas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Haga click para ver las láminas completas"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:layout_marginBottom="16dp"/>

                <!-- 5. Contenedor de Láminas -->
                <LinearLayout
                    android:id="@+id/laminasContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"/>

                <!-- 6. Videos de Huasco -->
                <TextView
                    android:id="@+id/tvVideoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Videos de Huasco"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnFullScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pantalla Completa"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp" />

        </LinearLayout>
</ScrollView>
