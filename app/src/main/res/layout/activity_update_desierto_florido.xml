<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción del Desierto Florido"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_seleccionar_imagen_carrusel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Imagen Carrusel"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/iv_imagen_carrusel1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_seleccionar_lamina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Lámina"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/iv_lamina1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/iv_lamina2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_seleccionar_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Video"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Cambios"
            android:layout_marginBottom="16dp"/>

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icono_atras"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_gravity="start"/>

    </LinearLayout>
</ScrollView>
