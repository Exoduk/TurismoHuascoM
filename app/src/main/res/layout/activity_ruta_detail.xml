<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ruta_faro"
        android:outlineProvider="background"
        android:clipToOutline="true"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/textViewRutaTituloDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Título de la Ruta"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRutaTituloDetail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="-29dp"
        android:background="@null"
        android:src="@drawable/ic_arrow_back" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonBack"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#80FFFFFF"
        android:elevation="8dp"
        android:radius="16dp"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="345dp"
            android:layout_height="322dp">

            <TextView
                android:id="@+id/textViewRutaDescripcionDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Descripción de la ruta, comidas y shows en vivo"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageViewExtra"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/textViewRutaDescripcionDetail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:clipToOutline="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:outlineProvider="background"
                android:padding="8dp"
                android:scaleType="centerCrop"

                android:src="@drawable/placeholder_image" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewExtra"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:padding="16dp"
                android:radius="8dp">

                <!-- Texto de la dirección -->
                <TextView
                    android:id="@+id/textViewRutaUbicacionDetail"
                    android:layout_width="326dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Av Bustillo 3950"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
